<Window x:Class="DNS.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DNS.Views"
        mc:Ignorable="d"
        Title="Профиль" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <materialDesign:ColorZone Mode="PrimaryDark" 
                                 Grid.Row="0"
                                 Padding="16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="AccountCircle"
                                           Width="32"
                                           Height="32"
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="Профиль пользователя"
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                             Margin="16,0,0,0"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка - Личные данные -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Личные данные"
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             Margin="0,0,0,16"/>

                    <TextBlock Text="Имя пользователя"
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             Margin="0,8,0,4"/>
                    <TextBox Text="{Binding Username}"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            materialDesign:HintAssist.Hint="Имя пользователя"
                            IsReadOnly="True"
                            Margin="0,0,0,16"/>

                    <TextBlock Text="Email"
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             Margin="0,8,0,4"/>
                    <TextBox Text="{Binding Email}"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            materialDesign:HintAssist.Hint="Email"
                            IsReadOnly="True"
                            Margin="0,0,0,16"/>

                    <TextBlock Text="Дата регистрации"
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             Margin="0,8,0,4"/>
                    <TextBox Text="{Binding RegistrationDate, StringFormat=\{0:dd.MM.yyyy\}}"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            materialDesign:HintAssist.Hint="Дата регистрации"
                            IsReadOnly="True"
                            Margin="0,0,0,16"/>

                    <!-- Статистика -->
                    <TextBlock Text="Статистика"
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             Margin="0,16,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Количество заказов:"
                                 Grid.Column="0"
                                 Grid.Row="0"
                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                 Margin="0,8,8,4"/>
                        <TextBlock Text="{Binding OrderCount}"
                                 Grid.Column="1"
                                 Grid.Row="0"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Foreground="{DynamicResource PrimaryHueDarkBrush}"/>

                        <TextBlock Text="Общая сумма заказов:"
                                 Grid.Column="0"
                                 Grid.Row="1"
                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                 Margin="0,8,8,4"/>
                        <TextBlock Text="{Binding TotalOrderAmount, StringFormat={}{0:N0} ₽}"
                                 Grid.Column="1"
                                 Grid.Row="1"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                    </Grid>
                </StackPanel>

                <!-- Разделитель -->
                <Separator Grid.Column="1"
                          Style="{StaticResource MaterialDesignDarkSeparator}"
                          VerticalAlignment="Stretch"
                          Margin="16,0"/>

                <!-- Правая колонка - Смена пароля -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Смена пароля"
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             Margin="0,0,0,16"/>

                    <PasswordBox x:Name="CurrentPasswordBox"
                               Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                               materialDesign:HintAssist.Hint="Текущий пароль"
                               Margin="0,8,0,16"/>

                    <PasswordBox x:Name="NewPasswordBox"
                               Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                               materialDesign:HintAssist.Hint="Новый пароль"
                               Margin="0,8,0,16"/>

                    <PasswordBox x:Name="ConfirmPasswordBox"
                               Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                               materialDesign:HintAssist.Hint="Подтвердите новый пароль"
                               Margin="0,8,0,16"/>

                    <Button Content="Сменить пароль"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="ChangePassword_Click"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Button Grid.Row="2"
                Content="Выйти из аккаунта"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="LogoutButton_Click"
                Margin="16"
                HorizontalAlignment="Right"/>
    </Grid>
</Window>
