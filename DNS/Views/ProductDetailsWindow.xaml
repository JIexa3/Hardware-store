<Window x:Class="DNS.Views.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DNS.Views"
        xmlns:converters="clr-namespace:DNS.Converters"
        mc:Ignorable="d"
        Title="Детали товара" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="productNameTextBlock"
                   Text="{Binding ProductName}"
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                   Margin="0,0,0,16"/>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Изображение -->
            <Image x:Name="productImage"
                   Source="{Binding ImageUrl, Converter={StaticResource ImagePathConverter}}"
                   Width="300"
                   Height="300"
                   Stretch="Uniform"
                   Margin="0,0,16,0"/>

            <!-- Информация о товаре -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                <TextBlock Text="Описание:"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="0,0,0,8"/>
                
                <TextBlock x:Name="productDescriptionTextBlock"
                           Text="{Binding ProductDescription}"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"/>

                <TextBlock Text="Цена:"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="0,0,0,8"/>
                
                <TextBlock x:Name="productPriceTextBlock"
                           Text="{Binding ProductPrice}"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           Foreground="{DynamicResource PrimaryHueDarkBrush}"
                           Margin="0,0,0,16"/>

                <TextBlock Text="В наличии:"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="0,0,0,8"/>
                
                <TextBlock x:Name="stockQuantityTextBlock"
                           Text="{Binding StockQuantity, StringFormat={}{0} шт.}"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           Margin="0,0,0,16"/>
            </StackPanel>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="Добавить в корзину"
                    Margin="8,0"
                    Click="AddToCart_Click"
                    Visibility="{Binding CurrentUser, Converter={StaticResource NullToCollapsedConverter}}"/>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Закрыть"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
