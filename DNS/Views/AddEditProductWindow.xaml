<Window x:Class="DNS.Views.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Товар" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Информация о товаре"
                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                 Margin="0,0,0,16"/>

        <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка с полями ввода -->
                <StackPanel>
                    <TextBox x:Name="NameTextBox"
                           Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                           materialDesign:HintAssist.Hint="Название товара"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           Margin="0,0,0,16"/>

                    <TextBox x:Name="DescriptionTextBox"
                           Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                           materialDesign:HintAssist.Hint="Описание"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalContentAlignment="Top"
                           MinHeight="100"
                           Margin="0,0,0,16"/>

                    <TextBox x:Name="PriceTextBox"
                           Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                           materialDesign:HintAssist.Hint="Цена"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           Margin="0,0,0,16"/>

                    <TextBox x:Name="StockQuantityTextBox"
                           Text="{Binding StockQuantity, UpdateSourceTrigger=PropertyChanged}"
                           materialDesign:HintAssist.Hint="Количество на складе"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           Margin="0,0,0,16"/>

                    <ComboBox x:Name="CategoryComboBox"
                            materialDesign:HintAssist.Hint="Категория"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            DisplayMemberPath="Name"
                            SelectedValuePath="Id"
                            Margin="0,0,0,16"/>
                </StackPanel>

                <!-- Правая колонка с изображением -->
                <StackPanel Grid.Column="1"
                          Margin="16,0,0,0"
                          Width="200">
                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,16">
                        <Image x:Name="ProductImage"
                               Height="200"
                               Stretch="Uniform"/>
                    </Border>

                    <Button Content="Выбрать изображение"
                            Click="SelectImageButton_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Отмена"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Сохранить"
                    Click="SaveButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
