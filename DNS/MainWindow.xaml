<Window x:Class="DNS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DNS"
        xmlns:converters="clr-namespace:DNS.Converters"
        mc:Ignorable="d"
        Title="DNS - Магазин электроники" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <converters:StockToButtonTextConverter x:Key="StockToButtonTextConverter"/>
        <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <materialDesign:ColorZone Mode="PrimaryMid" 
                                 Padding="16" 
                                 materialDesign:ElevationAssist.Elevation="Dp2">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/logo.png" Height="40" Margin="0,0,16,0"/>
                    <TextBox Width="300"
                             Style="{StaticResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.Hint="Поиск товаров..."
                             x:Name="searchTextBox"
                             TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="16,0">
                    <!-- Кнопки для неавторизованного пользователя -->
                    <Button Content="Войти"
                            Click="LoginButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="8,0"
                            Visibility="{Binding IsUserLoggedIn, Converter={StaticResource InverseBoolToVis}}"/>

                    <!-- Кнопки для авторизованного пользователя -->
                    <Button Click="ProfileButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="4,0"
                            Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCircle" 
                                                   Width="24" 
                                                   Height="24"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentUser.Username}"
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="CartButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="4,0"
                            Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cart" 
                                                   Width="24" 
                                                   Height="24"/>
                            <TextBlock Text="Корзина"
                                     Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="OrderHistoryButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="4,0"
                            Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="History" 
                                                   Width="24" 
                                                   Height="24"/>
                            <TextBlock Text="История заказов"
                                     Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель категорий -->
            <StackPanel Grid.Column="0" Margin="16">
                <TextBlock Text="Категории"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,8"/>
                
                <Button Content="Все товары"
                        Click="OnAllProductsClick"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,8"/>

                <ListBox x:Name="categoriesListBox"
                        SelectionChanged="CategoriesListBox_SelectionChanged"
                        Margin="16">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                                     Margin="32,8"
                                     Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Список товаров -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок с количеством товаров -->
                <TextBlock x:Name="productsCountTextBlock"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,16"/>

                <!-- Список товаров -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="productsListBox" ItemsSource="{Binding Products}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="8" Width="200">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="200"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Image Source="{Binding ImageUrl, Converter={StaticResource ImagePathConverter}}" 
                                               Grid.Row="0"
                                               Height="200"
                                               Width="200"
                                               Margin="8"/>
                                        
                                        <TextBlock Grid.Row="1"
                                                 Text="{Binding Name}"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Margin="8,0"
                                                 TextWrapping="Wrap"/>
                                        
                                        <TextBlock Grid.Row="2"
                                                 Text="{Binding Description}"
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Margin="8,8,8,0"
                                                 TextWrapping="Wrap"/>
                                        
                                        <TextBlock Grid.Row="3"
                                                 Text="{Binding Price, StringFormat={}{0:N0} ₽}"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Margin="8,8,8,0"
                                                 Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                                        
                                        <Button Grid.Row="4"
                                                Margin="8,4,8,0"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Content="Подробнее"
                                                Click="ViewProductDetails_Click"
                                                CommandParameter="{Binding}"/>

                                        <Button Grid.Row="5"
                                                Margin="8,4,8,8"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Content="{Binding StockQuantity, Converter={StaticResource StockToButtonTextConverter}}"
                                                Click="AddToCart_Click"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding StockQuantity, Converter={StaticResource GreaterThanZeroConverter}}"
                                                Visibility="{Binding DataContext.CurrentUser, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NullToCollapsedConverter}}"/>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
